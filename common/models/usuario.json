{
  "name": "Usuario",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "id": {
      "type": "number",
      "required": true
    },
    "nombre": {
      "type": "string"
    },
    "apellidos": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "solicitudes": {
      "type": "hasAndBelongsToMany",
      "model": "ListaFamiliar",
      "foreignKey": "usuarioId"
    },
    "propietario": {
      "type": "hasOne",
      "model": "ListaFamiliar",
      "foreignKey": "owner"
    },
    "listaFamiliar": {
      "type": "belongsTo",
      "model": "ListaFamiliar",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "aceptarSolicitud"
    }
  ],
  "methods": {
    "prototype.aceptarSolicitud": {
      "accepts": [
                {
                    "arg": "context",
                    "type":"object",
                    "required":"true",
                    "description":"contexto",
                    "http":{
                        "source":"context"
                    }
                }
                
            ],
      "returns": [
        {
          "arg": "miembrosLista",
          "type": "string",
          "root": false,
          "description": "Esta acción debe devolver un array con todos los miembros de la lista."
        }
      ],
      "description": "Enviamos un identificador de usuario y, si ese usuario tiene alguna solicitud en la lista de la que es miembro el actualmente autenticado, esta solicitud será aprobada.",
      "http": [
        {
          "path": "/aceptarSolicitud",
          "verb": "put"
        }
      ]
    }
  }
}
