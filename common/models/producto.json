{
  "name": "Producto",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "id": {
      "type": "number",
      "required": true
    },
    "nombre": {
      "type": "string"
    },
    "comprar": {
      "type": "boolean",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "listaFamiliar": {
      "type": "belongsTo",
      "model": "ListaFamiliar",
      "foreignKey": "listaFamiliarId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "Productos"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "limpiarLista"
    }
  ],
  "methods": {
    "limpiarLista": {
      "accepts": [
        {
          "arg": "context",
          "type": "object",
          "http": {
            "source": "context"
          }
        }
      ],
      "returns": [
        {
          "arg": "miembrosLista",
          "type": "array",
          "root": false,
          "description": "Esta acción debe devolver un array con todos los productos de la lista del usuario autenticado."
        }
      ],
      "description": "Crear un método que ponga el atributo comprar de todos los productos de una lista a false.",
      "http": [
        {
          "path": "/limpiarLista",
          "verb": "put"
        }
      ]
    }
  }
}
